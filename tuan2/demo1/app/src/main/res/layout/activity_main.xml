<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Avatar circle -->
    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/circle_red"
        android:clipToOutline="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar" />
    </FrameLayout>

    <!-- Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyễn Văn Quốc Lâm - CN22F"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="12dp" />

    <!-- Question -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mong muốn có thể phát triển được các dự án trên nền tảng thiết bị di động. Dự định phát triển song song các dự án phần mềm máy tính và phần mềm di động để thuận tiện hơn cho người dùng."
        android:textColor="#888888"
        android:textSize="14sp"
        android:gravity="center" />
</LinearLayout>
